<li id="run-<%= run.id %>">
  <% if run.user.picture? %>
    <%= link_to image_tag(@user.picture.url, size: "50x50"), run.user %>
  <% else  %>
    <%= link_to image_tag("no_photo.png", size: "50x50"), run.user %>
  <% end  %>

  <span class="user"><%= link_to run.user.name, run.user %></span>
  <span class="note">
	<%= run.note %> <br>
	<% if run.picture? %> 
	  <%= image_tag run.picture.url, size: "100x100" %> <br>
    <% end %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(run.created_at) %> ago.
	<% if current_user?(run.user) %>
      <%= link_to "delete", run, method: :delete,
                                 data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
