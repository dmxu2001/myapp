<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
		<% if @user.picture? %>
  		  <%= image_tag(@user.picture.url, size: "100x100") %>
		<% else  %>
  		  <%= image_tag("no_photo.png", size: "100x100") %>
		<% end  %>
        <%= @user.name %>
      </h1>
    </section>

	<section class="stats">
      <%= render 'shared/stats' %>
    </section>

	<section class="run_form">
        <%= render 'shared/run_form' %>
    </section>
  </aside>

  <div class="col-md-8">
	<%= render 'follow_form' if logged_in? %>

    <% if @user.runs.any? %>
      <h3><%= @user.name %>'s Posts (<%= @user.runs.count %>)</h3>
      <ol class="runs">
        <%= render @runs %>
      </ol>
      <%= will_paginate @runs %>
    <% end %>
  </div>

</div>
