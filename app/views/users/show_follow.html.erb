
<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
	  <% if @user.picture? %>
        <%= image_tag(@user.picture.url, size: "100x100") %>
      <% else  %>
        <%= image_tag("no_photo.png", size: "100x100") %>
      <% end  %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view the runner's activities", @user %></span>
      <span><b>Runner Posts:</b> <%= @user.runs.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
			<% if user.picture? %>
          	  <%= link_to image_tag(user.picture.url, size: "100x100"), user %>
        	<% else  %>
          	  <%= link_to image_tag("no_photo.png", size: "100x100"), user %>
        	<% end  %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>


