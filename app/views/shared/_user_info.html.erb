<% if current_user.picture? %>
  <%= link_to image_tag(current_user.picture.url, size: "100x100"), current_user %>
<% else  %>
  <%= link_to image_tag("no_photo.png", size: "100x100"), current_user %>
<% end  %>

<h1><%= current_user.name %></h1>
<span><%= link_to "view my activities", current_user %></span>
<span><%= pluralize(current_user.runs.count, "post") %></span>

